<% @user ||= current_user %>
<div class="stats">
  <a href="<%= following_user_path(@user) %>" class="btn btn-outline-primary">
    <strong id="following" class="stat">
      <%= @user.followings.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(@user) %>" class="btn btn-outline-primary">
    <strong id="followers" class="stat">
      <%= @user.followers.count %>
    </strong>
    followers
  </a>
</div>